@using Jobs.Models
@using PagedList.Mvc
@model PagedList.PagedList<Jobs.Models.ListJobEmploy>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h1 style="text-align:center"><strong>DANH SÁCH THU PHÍ</strong></h1>
        </div>
    </div>
</div>

<div class="row column_title">

    <div class="col-md-12">
        <div class="page_title">
            <a style="font-size: 15px; color: midnightblue"><strong>Phí tạo công việc: 700.000đ/Công việc</strong></a>
        </div>
    </div>
</div>

<div class="row">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>Mã nhà tuyển dụng</th>
                    <th>Tên nhà tuyển dụng</th>
                    <th>Mã công ty</th>
                    <th>Công ty</th>
                    <th>Tình trạng</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.id
                        </td>
                        <td>
                            @item.name
                        </td>
                        <td>
                            @item.idCom
                        </td>
                        <td>
                            @item.nameCom
                        </td>
                        <td>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <select class="form-check">
                                        <option>Đã thu</option>
                                        <option>Chưa</option>
                                    </select>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>

<div class="row">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="~/Admin/RecruitmentFees/Fees" class="btn btn-outline-success" role="button">Xem số liệu</a>
        </div>
    </div>
</div>

        @*Tạo liên kết phần trang*@
        <style>
            .MenuTrang {
                display: inline;
                text-align: center;
                position: absolute;
                left: 50%;
                transform: translate(-50%, -50%);
            }
        </style>
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        <div class="MenuTrang">
            <br /> <br />
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
